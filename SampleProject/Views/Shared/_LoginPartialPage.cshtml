                            <li class="sidebar">
                                <a href="#">
                                    <i class="fa fa-tachometer-alt"></i>
                                    <span class="menu-text">Dashboard</span>
                                    <span class="badge badge-pill badge-warning">New</span>
                                </a>

                            </li>
                            <li class="sidebar">
                                <a href="#">
                                    <i class="fa fa-book"></i>
                                    <span class="menu-text">New Videos</span>
                                    <span class="badge badge-pill badge-success">New</span>
                                </a>

                            </li>

                            <li class="sidebar-dropdown">
                                <a href="#">
                                    <i class="far fa-comment-alt"></i>
                                    <span class="menu-text">Chat</span>
                                </a>
                                <div class="sidebar-submenu">
                                    <ul>
                                        <li>
                                            @if (Convert.ToInt32(this.Session["role_id"]) == 1)
                                            {
                                                <a href="#" onclick="popmodal()">Chat with Admin </a>
                                                <span style="color:green;"> Online</span>
                                            }
                                            else
                                            {
                                                <a style="color:red;">Sorry, Offline</a>
                                            }
                                        </li>

                                    </ul>
                                </div>
                            </li>
                            <li class="header-menu">
                                <span>Extra</span>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-book"></i>
                                    <span class="menu-text">Live Video</span>
                                    <span class="badge badge-pill badge-primary">Upcoming</span>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-calendar"></i>
                                    <span class="menu-text">News Letter</span>
                                    <span class="badge badge-pill badge-primary">Upcoming</span>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-folder"></i>
                                    <span class="menu-text">Help</span>
                                </a>
                            </li>
                        </ul>
